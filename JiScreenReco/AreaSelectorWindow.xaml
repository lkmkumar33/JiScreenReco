<Window x:Class="JiScreenReco.AreaSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Recording Area - Drag mouse to select, then release"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#40000000"
        WindowState="Maximized"
        Topmost="True"
        Cursor="Cross">

	<Grid>
		<Canvas x:Name="RootCanvas" Background="Transparent"
                MouseLeftButtonDown="RootCanvas_MouseLeftButtonDown"
                MouseLeftButtonUp="RootCanvas_MouseLeftButtonUp"
                MouseMove="RootCanvas_MouseMove">
			<Rectangle x:Name="SelectionRect"
                       Stroke="Red"
                       StrokeThickness="3"
                       Fill="#20FF0000"
                       Visibility="Collapsed"/>

			<TextBlock x:Name="tbInstructions"
                       Text="Drag to select area, then release mouse. Press ESC to cancel."
                       Foreground="White"
                       Background="#80000000"
                       Padding="10,5"
                       FontSize="14"
                       Canvas.Top="20"
                       Canvas.Left="20"/>
		</Canvas>
	</Grid>
</Window>